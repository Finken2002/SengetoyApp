<Window x:Class="SengetoyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sengetøy – oversikt" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" VerticalAlignment="Center">
  <ComboBox x:Name="FilterCombo" Width="160" Margin="0,0,8,0" SelectionChanged="FilterCombo_SelectionChanged">
    <ComboBoxItem Content="I dag" IsSelected="True"/>
    <ComboBoxItem Content="Forfalt"/>
    <ComboBoxItem Content="Denne uken"/>
    <ComboBoxItem Content="Alle"/>
  </ComboBox>

  <TextBox x:Name="SearchBox" Width="220" Margin="0,0,8,0" TextChanged="SearchBox_TextChanged"/>
  <Button Content="Legg til rom" Click="AddRoom_Click" Padding="10,4"/>

  <TextBlock Text="{Binding StatusText}" Margin="16,0,0,0" VerticalAlignment="Center" />
</StackPanel>


    <DataGrid x:Name="Grid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="8"
              SelectionMode="Single">
      <DataGrid.Columns>
  <DataGridTextColumn Binding="{Binding RoomNumber}" Header="Rom" Width="*" />
  <DataGridTextColumn Binding="{Binding ResidentName}" Header="Person" Width="*" /> <!-- NY -->
  <DataGridTextColumn Binding="{Binding LastChanged, StringFormat=\{0:yyyy-MM-dd\}}" Header="Sist skiftet" Width="*" />
  <DataGridTextColumn Binding="{Binding IntervalDays}" Header="Intervall (dager)" Width="*" />
  <DataGridTextColumn Binding="{Binding NextDue, StringFormat=\{0:yyyy-MM-dd\}}" Header="Neste" Width="*" />
  <DataGridTextColumn Binding="{Binding Note}" Header="Notat" Width="2*" />
  <DataGridCheckBoxColumn Binding="{Binding Paused}" Header="Pauset" Width="*" />
  <DataGridTemplateColumn Header="Handlinger" Width="2*">
    <DataGridTemplateColumn.CellTemplate>
      <DataTemplate>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
          <Button Content="Skiftet i dag" Click="MarkToday_Click" Margin="0,0,6,0" Padding="6,2"/>
          <Button Content="Utsett 1 uke" Click="Postpone7_Click" Margin="0,0,6,0" Padding="6,2"/>
          <Button Content="{Binding PauseButtonLabel}" Click="TogglePause_Click" Margin="0,0,6,0" Padding="6,2"/>
          <Button Content="Slett" Click="DeleteRoom_Click" Padding="6,2"/>
        </StackPanel>
      </DataTemplate>
    </DataGridTemplateColumn.CellTemplate>
  </DataGridTemplateColumn>
</DataGrid.Columns>


    </DataGrid>

    <StatusBar DockPanel.Dock="Bottom">
      <StatusBarItem Content="{Binding FooterText}" />
    </StatusBar>
  </DockPanel>
</Window>
