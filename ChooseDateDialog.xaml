<Window x:Class="SengetoyApp.ChooseDateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Velg dato for skift" Height="180" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel>
      <TextBlock Text="Når ble sengetøyet skiftet?" Margin="0,0,0,6"/>
      <DatePicker x:Name="DateBox"/>
      <TextBlock x:Name="ErrorText" Foreground="Tomato" Margin="0,6,0,0"/>
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
      <Button Content="Avbryt" Width="80" Margin="0,0,6,0" Click="Cancel_Click"/>
      <Button Content="OK" Width="80" Click="Ok_Click"/>
    </StackPanel>
  </Grid>
</Window>
